<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/my_operate_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/history_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="股票"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/exchange_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingTop="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="交易时间"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/history_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="交易数量"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/history_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="成本/现价"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/history_profit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="盈亏"
            android:textColor="@color/main_text_color"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/history_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="股票"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/exchange_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingBottom="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="交易时间"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/history_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="交易数量"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/history_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="成本/现价"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/history_profit_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="盈亏"
            android:textColor="@color/main_text_color"/>
    </LinearLayout>
</LinearLayout>
