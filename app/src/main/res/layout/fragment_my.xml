<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/my_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_row_bg"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <com.example.rui.mystock.widget.CircleImageView
            android:id="@+id/my_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@mipmap/huiqaio"/>
        <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/my_photo"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:text="游客"
        android:textColor="@color/main_text_color"/>

        <TextView
            android:id="@+id/my_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/my_photo"
            android:layout_below="@id/my_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="账号：------"
            android:textSize="16sp"
            android:textColor="@color/main_text_color"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_bg_grey"/>
        <RelativeLayout
            android:id="@+id/my_money_layout"
            android:background="@drawable/text_row_bg"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="100dp"
            android:textSize="18sp"
            android:text="总资产"
            android:textColor="@color/main_text_color"/>

        <TextView
            android:id="@+id/my_all_money_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_all_money"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="---"
            android:textSize="16sp"
            android:textColor="@color/main_text_color"/>
            <TextView
                android:id="@+id/my_all_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_toRightOf="@+id/my_all_money"
                android:textSize="18sp"
                android:text="浮动盈亏"
                android:textColor="@color/main_text_color"/>

            <TextView
                android:id="@+id/my_all_profit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_all_profit"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@+id/my_all_profit"
                android:text="---"
                android:textSize="16sp"
                android:textColor="@color/main_text_color"/>
            <TextView
                android:id="@+id/my_all_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_below="@+id/my_all_money_value"
                android:textSize="18sp"
                android:text="总市值"
                android:textColor="@color/main_text_color"/>

            <TextView
                android:id="@+id/my_all_stock_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_all_stock"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:text="---"
                android:textSize="16sp"
                android:textColor="@color/main_text_color"/>
            <TextView
                android:id="@+id/my_day_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignLeft="@+id/my_all_profit"
                android:layout_below="@+id/my_all_profit_value"
                android:textSize="18sp"
                android:text="当日参考盈亏"
                android:textColor="@color/main_text_color"/>

            <TextView
                android:id="@+id/my_day_profit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@+id/my_all_profit"
                android:layout_below="@+id/my_day_profit"
                android:text="---"
                android:textSize="16sp"
                android:textColor="@color/main_text_color"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/main_bg_black_light"/>
    <LinearLayout
        android:id="@+id/my_operate_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/my_buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="18sp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:text="买入"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/my_sell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="18sp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:text="卖出"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/my_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="18sp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:text="撤单"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/my_owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="18sp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:text="持仓"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/my_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="18sp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:text="查询"
            android:textColor="@color/main_text_color"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_bg_grey"/>
    <LinearLayout
        android:id="@+id/month_profit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="@drawable/text_row_bg">
        <TextView
            android:id="@+id/my_month_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:text="**月参考盈亏"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/my_month_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:text="---"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/my_month_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            android:text="收益率---，跑赢上证指数---"
            android:textColor="@color/main_text_color"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>