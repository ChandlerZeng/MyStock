<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/my_money_layout"
            android:background="@drawable/text_row_bg"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="100dp"
            android:text="总资产"
            android:textColor="@color/main_text_color"/>

        <TextView
            android:id="@+id/my_all_money_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_all_money"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="---"
            android:textColor="@color/main_text_color"/>
            <TextView
                android:id="@+id/my_all_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_toRightOf="@+id/my_all_money"
                android:text="浮动盈亏"
                android:textColor="@color/main_text_color"/>

            <TextView
                android:id="@+id/my_all_profit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_all_profit"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@+id/my_all_profit"
                android:text="---"
                android:textColor="@color/main_text_color"/>
            <TextView
                android:id="@+id/my_all_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_below="@+id/my_all_money_value"
                android:text="总市值"
                android:textColor="@color/main_text_color"/>

            <TextView
                android:id="@+id/my_all_stock_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_all_stock"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:text="---"
                android:textColor="@color/main_text_color"/>
            <TextView
                android:id="@+id/my_day_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignLeft="@+id/my_all_profit"
                android:layout_below="@+id/my_all_profit_value"
                android:text="当日参考盈亏"
                android:textColor="@color/main_text_color"/>

            <TextView
                android:id="@+id/my_day_profit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignLeft="@+id/my_all_profit"
                android:layout_below="@+id/my_day_profit"
                android:text="---"
                android:textColor="@color/main_text_color"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/main_bg_black_light"/>
    <LinearLayout
        android:id="@+id/my_operate_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hold_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="市值"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/hold_profit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="盈亏"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/hold_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="持仓/可用"
            android:textColor="@color/main_text_color"/>
        <TextView
            android:id="@+id/hold_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:background="@drawable/text_row_bg"
            android:gravity="center"
            android:text="成本/现价"
            android:textColor="@color/main_text_color"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_bg_grey"/>
    <ListView
        android:id="@+id/hold_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>